<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sonin.modules.base.mapper.BaseMapper">

    <select id="queryForMap" resultType="java.util.LinkedHashMap" parameterType="java.lang.String">
        ${sqlSelect} ${ew.customSqlSegment}
    </select>

    <select id="queryForPage" resultType="java.util.LinkedHashMap" parameterType="java.lang.String">
        ${sqlSelect} ${ew.customSqlSegment}
    </select>

    <select id="queryForList" resultType="java.util.LinkedHashMap" parameterType="java.lang.String">
       ${sqlSelect} ${ew.customSqlSegment}
    </select>

    <update id="update">
         update ${tableName} set ${ew.sqlSet} ${ew.customSqlSegment}
    </update>

    <delete id="delete">
         delete from ${tableName} ${ew.customSqlSegment}
    </delete>

    <insert id="insert">
        insert into ${tableName}
        <foreach collection="ew.keys" item="key" open="(" close=")" separator=",">
            ${key}
        </foreach>
        values
        <foreach collection="ew.values" item="value" open="(" close=")" separator=",">
            #{value}
        </foreach>
    </insert>

    <insert id="insertBatch">
        insert into ${tableName}
        <foreach collection="keys" item="key" open="(" close=")" separator=",">
            ${key}
        </foreach>
        values
        <foreach collection="ewList" item="ew" separator=",">
            <foreach collection="ew.values" item="value" open="(" close=")" separator=",">
                #{value}
            </foreach>
        </foreach>
    </insert>

</mapper>
